@model IEnumerable<MyMusicCollection.Models.Album>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="logo"><h4>Big Mikes Playlists</h4>
        </div>
        <div class="nav">
            <ul>
                <li><a href="/album">Home</a></li>
                <li><a href="/song">All Songs</a></li>
                <li><a href="/album/create">Review a Album</a></li>
                <li><a href="/song/create">Review a Song</a></li>
             </ul>
        </div>
    </header>
        <div class="row">
            @foreach (var album in Model)
             {
            <div class="colum-card-main">
                <img src="@album.AlbumImageLocation" />
                <p><a href="/Album/Details/@album.Id"><h3>@album.AlbumName</h3></a></p>
                    @*album.AlbumInfo*@
            </div>
             }
        </div>
        <div class="footer">
             <p><h3>Hey, I'm D.J. Mic and I put together some awesome music playlists I think you will like. Check them out above.</h3></p>
        </div>
</body>                 
</html>

