@model IEnumerable<MyMusicCollection.Models.Album>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="logo">
                <img src="~/Img/logo.png" />
            </div>
            <div class="nav">
                <ul>
                    <li><a href="/album">Home</a></li>
                    <li><a href="/song">All Songs</a></li>
                    <li><a href="/album/create">Review An Album</a></li>
                    <li><a href="/song/create">Review A Song</a></li>
                </ul>
            </div>
        </header>

        <div class="grid-wrapper">
            <ul class="img-grid-2">
                @foreach (var album in Model)
                {
                    <li>
                        <a href="/Album/Details/@album.Id" class="overlay-container" data-overlay-text="@album.AlbumName">
                            <img src="@album.AlbumImageLocation" alt="Image capture goes here 01" class="overlay-img" />
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

      
        <div class="footer">
            <p><h3>Hey, I'm D.J. Mike and I put together some awesome music playlists I think you will like. Check them out above.</h3></p>
        </div>
    </div>
</body>                 
</html>

