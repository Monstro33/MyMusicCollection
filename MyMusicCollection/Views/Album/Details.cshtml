@model MyMusicCollection.Models.Album
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="logo">
                <img src="~/Img/logo.png" />
            </div>
            <div class="nav">
                <ul>
                    <li><a href="/album">Home</a></li>
                    <li><a href="/song">All Songs</a></li>
                    <li><a href="/album/create">Review An Album</a></li>
                    <li><a href="/song/create">Review A Song</a></li>
                </ul>
            </div>
        </header>
        <div class="row">
            <div class="colum-card-main-1">
                <p><h3>@Model.AlbumName </h3></p>
                <img src="@Model.AlbumImageLocation" />
                <p><h4>@Model.AlbumInfo</h4></p>
            </div>
            <div class="colum-card-main-2">
                <div class="grid-wrapper-3">
                    <p><h4>Song Listing</h4></p>
                    <ul class="img-grid-3">
                        @foreach (var song in Model.Songs)
                        {
                            <li>
                                <a href="/Song/Details/@song.Id" class="overlay-container" data-overlay-text="@song.SongName">
                                    <img src="@song.SongImageLocation" alt="Image capture goes here 01" class="overlay-img" />
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            @*<div class="colum">
                <p><h3>From the Listeners</h3></p>
                <p><h4>@Model.AlbumReviewContent</h4></p>
                <a href="/album">Back to list</a>
            </div>
        </div>*@
        <div class="footer-2">
            <p>Hey, I'm D.J. Mic and I put together some awesome music playlists I think you will like. Click on a song to check it out.</p>
        </div>
    </div>

</body>
</html>
