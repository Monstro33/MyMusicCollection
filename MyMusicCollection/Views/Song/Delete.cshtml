@model MyMusicCollection.Models.Song
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="logo">
                <img src="~/Img/logo.png" />
            </div>
            <div class="nav">
                <ul>
                    <li><a href="/album">Home</a></li>
                    <li><a href="/song">All Songs</a></li>
                    <li><a href="/song/create">Add A Song</a></li>
                </ul>
            </div>
        </header>
        <div class="user-reviews-form">
            <h5>Are you sure you want to delete this Song?</h5>
                <hr />
                <img src="@Model.SongImageLocation" />
                <dl class="dl-horizontal">
                
                    @*<dt>
                        @Html.DisplayNameFor(model => model.SongName)
                    </dt>*@
                    <dd><h4>
                         <hr />
                       @Html.DisplayFor(model => model.SongName)
                    </h4></dd>                 
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @*<a asp-action="Index">Back to List</a>*@
                    <button class="btn btn-default"><a href="/song">Back to list</a></button>
                </form>
            </div>
            </div>
</body>
</html>
