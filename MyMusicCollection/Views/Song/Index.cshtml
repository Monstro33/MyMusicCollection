@model IEnumerable<MyMusicCollection.Models.Song>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="logo">
               <img src="~/Img/logo.png" />
            </div>
            <div class="nav">
                <ul>
                    <li><a href="/album">Home</a></li>
                    <li><a href="/song">All Songs</a></li>
                    <li><a href="/album/create">Review An Album</a></li>
                    <li><a href="/song/create">Review A Song</a></li>
                </ul>
            </div>
        </header>
        <div class="grid-wrapper">
            <ul class="img-grid">
                @foreach (var song in Model)
                {
                    <li>
                        <a href="/Song/Details/@song.Id" class="overlay-container" data-overlay-text="@song.SongName">
                            <img src="@song.SongImageLocation" alt="Image capture goes here 01" class="overlay-img" />
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="footer">
        <p>Hey, I'm D.J. Mic and I put together some awesome music playlists I think you will like. Click on a song to check it out</p>
    </div>
</body>
</html>



